# -------------------------------------------------
# General
# -------------------------------------------------
COOLIFY_VERSION=v4.0.0-beta.463
COOLIFY_SERVER_HOSTNAME=coolify.example.com

# -------------------------------------------------
# Application
# -------------------------------------------------
# Generate: openssl rand -hex 16
APP_ID=

# Generate: echo "base64:$(openssl rand -base64 32)"
APP_KEY=

APP_NAME=Coolify
APP_ENV=production
APP_DEBUG=false
APP_URL=https://${COOLIFY_SERVER_HOSTNAME}

# -------------------------------------------------
# Database (internal)
# -------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=coolify
DB_USERNAME=coolify
# Generate: openssl rand -base64 24 | tr -dc 'A-Za-z0-9' | head -c 20
DB_PASSWORD=

# -------------------------------------------------
# Redis (internal)
# -------------------------------------------------
REDIS_HOST=coolify-redis
REDIS_PORT=6379
# Generate: openssl rand -base64 24 | tr -dc 'A-Za-z0-9' | head -c 20
REDIS_PASSWORD=

# -------------------------------------------------
# Pusher / Soketi (WebSocket via Traefik)
# -------------------------------------------------
# Generate: openssl rand -hex 16
PUSHER_APP_ID=

# Generate: openssl rand -hex 16
PUSHER_APP_KEY=

# Generate: openssl rand -hex 32
PUSHER_APP_SECRET=

PUSHER_HOST=${COOLIFY_SERVER_HOSTNAME}
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# -------------------------------------------------
# Queue / Cache / Session
# -------------------------------------------------
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
SESSION_DRIVER=redis
